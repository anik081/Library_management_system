<div class="">
  <label for="">Title</label>
  <input type="text" name="title" value="<%= book.title %>">
</div>
<div class="">
  <label for="">Author</label>
  <select class="" name="author">
    <% authors.forEach(function(author){ %>
      <% if (author.id== book.author){ %>
      <option selected label="<%= author.name %>" value ="<%= author.id %>"></option>
      <% }else{ %>
          <option  label="<%= author.name %>" value ="<%= author.id %>"></option>
    <%  } %>
    <% }); %>
  </select>
</div>
<div class="">
  <label for="">Publish Date</label>
  <input type="date" name="publishDate"
  value="<%= book.publishDate == null? '' :
   book.publishDate.toISOString().split('T')[0] %>">
</div>
<div class="">
  <label for="">Page Count</label>
  <input type="number" min="1" name="pageCount"  value="<%= book.pageCount %>">
</div>
<div class="">
  <label for="">Cover</label>
  <input type="file" name="cover">
</div>
<div class="">
  <label for="">Description</label>
  <textarea name="description" rows="8" cols="20"><%= book.description %></textarea>
</div>
